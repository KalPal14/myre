{
   "compilerOptions": {
      "target": "ES2021",
      "module": "Node16",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "incremental": true,
      "skipLibCheck": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "forceConsistentCasingInFileNames": false,
      "jsx": "react",
      "baseUrl": "./",
      "paths": {
         // apps
         "~/highlight-extension/*": [
            "apps/highlight-extension/src/*",
            "apps/highlight-extension/*"
         ],
         "~/highlight-extension-fe/*": [
            "apps/highlight-extension-fe/src/*",
         ],
         "~/iam/*": [
            "apps/iam/src/*",
            "apps/iam/*"
         ],
         // libs
         "~libs/common/*": [
            "libs/common/src/*"
         ],
         "~libs/common": [
            "libs/common/src/index"
         ],
         "~libs/dto/*": [
            "libs/dto/src/*"
         ],
         "~libs/express-core": [
            "libs/express-core/src/index"
         ],
         "~libs/express-core/*": [
            "libs/express-core/src/*"
         ],
         "~libs/react-core": [
            "libs/react-core/src/index"
         ],
         "~libs/react-core/*": [
            "libs/react-core/src/*"
         ],
         "~libs/ro/*": [
            "libs/ro/src/*"
         ],
         "~libs/routes/*": [
            "libs/routes/src/*"
         ],
      }
   },
   "exclude": [
      "node_modules"
   ]
}